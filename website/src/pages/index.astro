---
import Layout from '@layouts/Layout.astro'
import ReportList from '@components/ReportList'

const { PUBLIC_GITHUB_APP_URL, PUBLIC_DOCS_URL } = import.meta.env
---

<Layout title="Weekly PR Reports - GitHub Pull Request Analytics">
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-16">
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold text-foreground mb-4">Weekly PR Reports</h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          Automated GitHub pull request analytics and reporting for engineering teams. Get insights into your team's
          collaboration and code review process.
        </p>
        <div class="mt-8 space-x-4">
          <a
            href={PUBLIC_GITHUB_APP_URL}
            class="inline-block px-6 py-3 bg-primary text-primary-foreground font-medium rounded-lg hover:bg-primary/90 transition-colors"
          >
            Install GitHub App
          </a>
          <a
            href={`${PUBLIC_DOCS_URL}/getting-started`}
            class="inline-block px-6 py-3 bg-secondary text-secondary-foreground font-medium rounded-lg border border-input hover:bg-secondary/80 transition-colors"
          >
            View Documentation
          </a>
        </div>
      </div>

      <h2 class="text-3xl font-bold text-foreground mb-8 text-center">Features</h2>
      <ReportList client:load />
    </div>
  </main>
</Layout>
