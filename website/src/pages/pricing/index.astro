---
import Layout from '@layouts/Layout.astro'
import PricingCard from '@/components/PricingCard.tsx'
import { pricingTiers } from '@/config/pricing'
---

<Layout title="Pricing - Weekly PR Reports">
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-16">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-foreground mb-4">Simple, transparent pricing</h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          Choose the plan that's right for your team. All plans include a 14-day free trial.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {pricingTiers.map((tier) => <PricingCard tier={tier} />)}
      </div>
    </div>
  </main>
</Layout>
